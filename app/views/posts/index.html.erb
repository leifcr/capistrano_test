<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table class="striped">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= link_to '<i class="material-icons left">details</i>Show'.html_safe, post, class: 'btn green darken-2 waves-effect waves-light' %></td>
        <td><%= link_to '<i class="material-icons left">edit</i>Edit'.html_safe, edit_post_path(post), class: 'btn blue darken-2 waves-effect waves-light' %></td>
        <td><%= link_to '<i class="material-icons left">delete_forever</i>Destroy'.html_safe, post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn red darken-2 waves-effect waves-light' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<i class="material-icons left">add_circle_outline</i>New Post'.html_safe, new_post_path, class: "btn blue waves-effect waves-light" %>
<%= link_to '<i class="material-icons left">timelapse</i>Created Delayed Super Post'.html_safe, super_post_posts_path, class: "btn blue waves-effect waves-light" %>
